{
  "name": "morskoy-saper",
  "version": "1.0.0",
  "description": "Морской Сапёр - онлайн игра",
  "main": "dist/client/src/main/main.js",
  "scripts": {
    "build": "tsc && vite build",
    "start": "npm run build && electron .",
    "dev": "concurrently \"tsc -w\" \"electron .\"",
    "dev:web": "vite",
    "pack": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder --dir",
    "dist": "set CSC_IDENTITY_AUTO_DISCOVERY=false && npm run build && electron-builder --config electron-builder.json"
  },
  "dependencies": {
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  }
}
